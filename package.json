{
  "name": "bunny-jay",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "mkdbdir": "mkdir .\\db\\data & mkdir .\\db\\log",
    "db": "mongod --dbpath .\\db\\data --logpath .\\db\\log\\mongod.log",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.4.1",
    "bootstrap-vue": "^2.6.1",
    "chalk": "^3.0.0",
    "connect-mongo": "^3.2.0",
    "core-js": "^3.6.4",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "minimist": "^1.2.5",
    "mongoose": "^5.9.0",
    "nodemailer": "^6.4.5",
    "vue": "^2.6.11",
    "vue-axios": "^2.1.5",
    "vue-router": "^3.1.5",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.2.0",
    "@vue/cli-plugin-eslint": "~4.2.0",
    "@vue/cli-plugin-router": "~4.2.0",
    "@vue/cli-plugin-vuex": "~4.2.0",
    "@vue/cli-service": "~4.2.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^6.1.2",
    "lint-staged": "^9.5.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.19.1",
    "sass-loader": "7.3.1",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/prettier"
    ],
    "globals": {
      "config": false,
      "chalk": false,
      "include": false,
      "init": false
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "semi": true,
          "tabWidth": 2,
          "arrowParens": "always",
          "singleQuote": false,
          "trailingComma": "es5",
          "htmlWhitespaceSensitivity": "ignore"
        }
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
